.desc {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 50rpx;
  font-size: 26rpx;
  color: #999999;
}

.box {
  margin: 100rpx auto 0;
  width: 90%;
  padding: 0 20rpx;
  border-radius: 20rpx;
  border: 1px solid #ccc;
}
.box .input {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}
.box .input .prompt {
  flex: none;
  color: #999999;
}
.box .input .value {
  flex: 1;
  margin-left: 20rpx;
  color: #666;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 100rpx auto 0;
  width: 350rpx;
  height: 85rpx;
  background-image: linear-gradient(90deg, #327ff1 0%, #4599f2 100%);
  box-shadow: 0 0 20rpx 0 rgba(11, 94, 199, 0.35);
  border-radius: 85rpx;
  color: #FFFFFF;
}
