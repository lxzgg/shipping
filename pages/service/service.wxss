.tab {
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 1px solid #eee;
}
.tab > view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.tab > view:last-child {
  border-left: 1px solid #eee;
}
.tab .select {
  color: #327ff0;
}

.search {
  margin: 15rpx 30rpx;
  padding: 20rpx;
  box-shadow: 0 0 15rpx 0 rgba(153, 153, 153, 0.3);
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #999999;
}

.list .item {
  margin: 20rpx 30rpx;
  padding: 30rpx;
  box-shadow: 0 0 15rpx 0 rgba(150, 150, 150, 0.35);
  border-radius: 10px;
}
.list .item .number {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999999;
}
.list .item .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}
.list .item .info .person {
  font-size: 24rpx;
  color: #999999;
}
.list .item .info-arrow {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #999999;
}

.view {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 80rpx;
  background-image: linear-gradient(90deg, #327ff1 0%, #4599f2 100%);
  box-shadow: 0 0 25rpx 0 rgba(11, 94, 199, 0.35);
  border-radius: 20rpx;
  color: #ffffff;
}

.arrow-bg {
  width: 200rpx;
  height: 10rpx;
}
