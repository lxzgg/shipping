.search {
  display: flex;
  align-items: center;
  margin: 30rpx;
  border-radius: 10rpx;
  border: 1px solid #eee;
}
.search input {
  padding: 15rpx;
  flex: 1;
}
.search .icon {
  margin: 0 15rpx;
  color: #999;
}

.hot {
  padding: 30rpx;
  border-top: 1px solid #eee;
}
.hot .hot-title {
  font-size: 28rpx;
  color: #000;
}
.hot .hot-city {
  display: flex;
  flex-wrap: wrap;
  font-size: 26rpx;
  margin-top: 20rpx;
}
.hot .hot-city > view {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 25%;
  height: 60rpx;
}

.linkage {
  padding: 50rpx 15rpx 0;
  border-top: 8rpx solid #eee;
  font-size: 30rpx;
  color: #999;
}
.linkage .title {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
  font-size: 26rpx;
  color: #000;
}
.linkage .list {
  display: flex;
  overflow: hidden;
}
.linkage .list picker-view {
  flex: 1;
  height: 1000rpx;
  margin-top: -460rpx;
}
.linkage .list picker-view picker-view-column {
  text-align: center;
}
.linkage .list picker-view picker-view-column view {
  display: flex;
  align-items: center;
  justify-content: center;
}
.linkage .list picker-view picker-view-column .select {
  color: #dc3545;
}

.define {
  position: fixed;
  bottom: 50rpx;
  left: 5%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90%;
  height: 90rpx;
  border-radius: 10rpx;
  color: #fff;
  background-color: #007bff;
}

.indicator {
  box-sizing: border-box;
  height: 80rpx;
}

.mask {
  background: none;
}

.search-results {
  box-sizing: border-box;
  position: fixed;
  top: 150rpx;
  height: calc(100% - 150rpx);
  width: 100%;
  padding: 15rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
}
.search-results .results {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background-color: #FFF;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.search-results .results view {
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
}
